@import 'nib'

global-reset()
block-color = #efefef
button-color = #333


body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
h2
  font-size: 2.5em
  margin: 10px 0
.wrapper
  margin: 0 auto
  max-width: 1100px
.button
  border-radius: 15px 
  background: button-color
  color: #fff
  padding: 0.5em 1%
  display: block

.video-box
  width: 100%
  min-height: 500px
  background: block-color
  text-align: center
  overflow: hidden
  a
    background: #FFF
    border-radius: 180px
    display: inline-block
    padding: 20px
    font-size: 4em
    margin-top: 170px
    color: #999
    cursor: pointer
    &:hover
      color: #000
    i
      padding: 18px 22px 18px 27px
header
  padding: 20px 0
  margin: 20px 0
  width: 100%
  float: left
.logo
  text-transform: uppercase
  font-size: 3em
  float: left
.meny
  float: left
  width: 40%
  margin: 1.2em 4%
  li
    padding: 0 4%
    display: inline-block
.buy-part
  float: right
  clear: right
  position: relative
  width: 24%
  margin-top: -1em
  input
    max-width: 44px
    font-size: 1.2em
  .buy-button
    display: inline-block
    min-width: 60px
    text-align: center
.current-price
  padding: 5px 1%
  border: solid 1px #666
.previous-price, .upcoming-price
  color: #999
  font-size: 0.9em
  text-align: center
  margin: 0 5%
  width: 90%
.previous-price
  span
    text-decoration: line-through
.tickets-left
  transform: rotate(15deg)
  position: absolute
  top: -15px
  text-align: center
  display: block
  right: -40px
  background: pink
  padding: 0.5em 0.85em
  border-radius: 30px
  span
    display: block
    font-size: 1.3em

.curators
  width: 20%
  margin: 0 5% 0 0 
  float: left
  .curators-image
    width: 100%
    height: 200px
    border-radius 0 0 80px 80px
    background: block-color
  h3
    text-align: center
    margin: 10px 0
    font-size: 1.2em
